        double salarioEmpleado = entrada.nextDouble();

        System.out.println("¿El empleado es jefe de Departamento?:");
        boolean EsJefedeDepartamento = entrada.nextBoolean();


        System.out.println("=====Información del Empleado====");
        String nombre = "steven";
        System.out.println("Nombre:" + NombreEmpleado);
        System.out.println("Edad:" + 32);
